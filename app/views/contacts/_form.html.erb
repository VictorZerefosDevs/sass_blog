<div class="row">

<div class="col col-md-8 col-md-offset-2">
<div class="well">
<%= form_for @contact do |f|  %>
	<div class="form-group">
		<i class="fa fa-user" ><%= f.label :name %></i>
		<%= f.text_field :name, class: 'form-control', placeholder: 'type your name ' %>
	</div>

	<div class="form-group">
		<i class="fa fa fa-envelope" ><%= f.label :email %></i>
	  <%= f.text_field :email, class: 'form-control', placeholder: 'type your email ' %>
	</div>
		
	<div class="form-group">
		<i class="fa fa-comment" ><%= f.label :comments %></i>
		<%= f.text_area :comments, class: 'form-control' , placeholder: 'Your comment ', rows: '6' %>
	</div>

	<%= f.submit class: 'btn btn-default' %>
</div>
	</div>
</div>


<% end %>